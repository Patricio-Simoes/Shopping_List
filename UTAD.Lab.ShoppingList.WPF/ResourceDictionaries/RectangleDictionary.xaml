<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Retângulo azul -->
    <Style TargetType="Rectangle" x:Key="blueRectangleStyle">
        <Setter Property="Fill" Value="#63C2F8"/>
        <Setter Property="Stroke" Value="#63C2F8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>
    <!-- Linhas separadoras (Brancas) -->
    <Style TargetType="Rectangle" x:Key="rectangleStyle">
        <Setter Property="Fill" Value="White"/>
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Width" Value="250"/>
    </Style>
    <!-- Retângulos separadores cinzentos -->
    <Style TargetType="Rectangle" x:Key="grayRectangleStyle">
        <Setter Property="Fill" Value="#C4C4C4"/>
        <Setter Property="Stroke" Value="#C4C4C4"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Width" Value="1350"/>
        <Setter Property="Height" Value="20"/>
    </Style>
</ResourceDictionary>